  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "CLI debug",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "env": {
        "GLUE_API_SERVER": "https://${env:USER}-dev.glue.wtf"
      },
      "runtimeExecutable": "deno",
      "runtimeArgs": ["task", "cli:debug"],
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "CLI debug prod",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "env": {
        "GLUE_API_SERVER": "https://api.glue.wtf"
      },
      "runtimeExecutable": "deno",
      "runtimeArgs": ["task", "cli:debug"],
      "attachSimplePort": 9229
    }
  ]
}
