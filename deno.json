{
  "name": "@streak-glue/cli",
  "version": "0.1.76",
  "license": "MIT",
  "exports": {
    ".": "./glue.ts"
  },
  "tasks": {
    "cli": "deno run --allow-all glue.ts",
    "cli:debug": "deno run --inspect-brk --allow-all glue.ts list",
    "lint": "deno lint",
    "lint:watch": "deno lint --watch",
    "test": "deno test -P",
    "test:watch": "deno test -P --watch",
    "check": "deno check",
    "check:watch": "deno run --allow-all --watch=./ ../glue-backend/utils/check.ts",
    "fmt": "deno fmt",
    "fmt:watch": "deno fmt --watch",
    "deploy": {
      "description": "Commits and pushes the current version to the remote",
      "command": "git push && git push --tags",
      "dependencies": [
        "bump-patch"
      ]
    },
    "bump-patch": "deno run --allow-read=deno.json --allow-write=deno.json --allow-run=git jsr:@kellnerd/bump@0.1.1 -c v -t v patch"
  },
  "test": {
    "permissions": {
      "read": true,
      "write": true,
      "env": true
    }
  },
  "unstable": [
    "kv",
    "temporal"
  ],
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0",
    "@cliffy/keypress": "jsr:@cliffy/keypress@1.0.0",
    "@opensrc/deno-open": "jsr:@opensrc/deno-open@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/async": "jsr:@std/async@^1.1.1",
    "@std/collections": "jsr:@std/collections@^1.1.5",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/net": "jsr:@std/net@^1.0.6",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/streams": "jsr:@std/streams@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "@streak-glue/runtime": "jsr:@streak-glue/runtime@^0.2.23",
    "chalk": "npm:chalk@^5.6.2",
    "hono": "npm:hono@^4.11.9",
    "ink": "npm:ink@^6.7.0",
    "ink-spinner": "npm:ink-spinner@^5.0.0",
    "it-pushable": "npm:it-pushable@^3.2.3",
    "react": "npm:react@^19.2.4",
    "typescript": "npm:typescript@^5.9.3",
    "zod": "npm:zod@^4.3.6",
    "@std/fmt": "jsr:@std/fmt@^1.0.9",
    "@std/cli": "jsr:@std/cli@^1.0.27"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "npm:@types/react@^19"
  },
  "fmt": {
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-unversioned-import",
        "no-import-prefix"
      ]
    }
  }
}
